    {
      "path": "pages/login/login",
      "aliasPath": "/login",
      "name": "login",
      "style": {
        "app-plus": {
          "softinputMode": "adjustPan"
        }
      }
    },
    {
      "path": "pages/login/register",
      "aliasPath": "/register",
      "name": "register"
    },
    //铅封
    {
      "path": "pages/pb/pb",
      "aliasPath": "/pb",
      "name": "pb",
      "style": {
        "app-plus": {}
      }
    },
    //铅封1
    {
      "path": "pages/pb/pb-one",
      "aliasPath": "/pbone",
      "name": "pbone",
      "style": {
        "app-plus": {}
      }
    },
    //铅封2
    {
      "path": "pages/pb/pb-second",
      "aliasPath": "/pbsecond",
      "name": "pbsecond",
      "style": {
        "app-plus": {}
      }
    },
    //消息
    {
      "path": "pages/msg/msg",
      "aliasPath": "/msg",
      "name": "msg",
      "style": {
        "app-plus": {}
      }
    },
    //岸电
    {
      "path": "pages/device/device",
      "aliasPath": "/device",
      "name": "device",
      "style": {
        "navigationBarTitleText": "长江海事局",
        "app-plus": {}
      }
    },
    //我的
    {
      "path": "pages/me/me",
      "aliasPath": "/me",
      "name": "me",
      "style": {
        "navigationBarTitleText": "长江海事局",
        "app-plus": {}
      }
    },
    {
      "path": "pages/index/index",
      "aliasPath": "/index",
      "name": "index"
    },
    {
      "path": "pages/chat/chat",
      "aliasPath": "/chat",
      "name": "chat",
      "style": {
        "app-plus": {
          "softinputMode": "adjustResize"
        }
      }
    }
  ],
  "tabBar": {
    "backgroundColor": "#ffffff",
    "borderStyle": "#e8e5e5",
    "selectedColor": "#1296db", //"#fe2338",
    "color": "#8a8a8a",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "/static/image/home.png",
        "selectedIconPath": "/static/image/home-select.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/pb/pb",
        // "pagePath": "pages/pb/pb-one",
        // "pagePath": "pages/pb/pb-second",
        "iconPath": "/static/image/pb.png",
        "selectedIconPath": "/static/image/pb-select.png",
        "text": "铅封"
      },
      {
        "pagePath": "pages/msg/msg",
        "iconPath": "/static/image/msg.png",
        "selectedIconPath": "/static/image/msg-select.png",
        "text": "消息"
      },
      {
        "pagePath": "pages/device/device",
        "iconPath": "/static/image/device.png",
        "selectedIconPath": "/static/image/device-select.png",
        "text": "岸电"
      },
      {
        "pagePath": "pages/me/me",
        "iconPath": "/static/image/me.png",
        "selectedIconPath": "/static/image/me-select.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationStyle": "custom",
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "rpxCalcMaxDeviceWidth": 960,
    "rpxCalcBaseDeviceWidth": 375,
    "app-plus": {
      "bounce": "none"
      // "scrollIndicator": "none"
    }
  },
